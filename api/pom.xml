	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.screamingsandals.bedwars</groupId>
		<artifactId>BedWars-parent</artifactId>
		<version>1</version>
	</parent>
	<artifactId>BedWars-API</artifactId>
	<version>${bedwars.version}</version>

	<dependencies>
